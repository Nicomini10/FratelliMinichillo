<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoAziendaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="60dp"
            android:text="Info Azienda"
            android:textSize="30sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/logo_info_azienda" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="25dp"
            android:paddingTop="30dp"
            android:text="Produzione: Infissi in alluminio, Alluminio - legno, P.V.C., legno – alluminio, persiane,  porte ingresso, porte blindate, porte basculante, porte  Sezionali, porte automatiche, controtelai in lamiera, zinc. e legno -  cancelli, ringhiere e grate in  ferro, scale da interno e da esterno – lavorazione di pressopiegati in lamiere - curvature profilati in alluminio"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="-30dp"
            android:layout_marginStart="60dp"
            android:src="@mipmap/certificato" />

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="-113dp"
            android:layout_marginStart="210dp"
            android:src="@mipmap/certificato2" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>